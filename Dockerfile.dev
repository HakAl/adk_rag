# Development Dockerfile with hot reload support
FROM python:3.11-slim

# Build argument to determine provider
ARG PROVIDER_TYPE=ollama

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN useradd -m -u 1000 app && \
    mkdir -p /app/data /app/chroma_db /app/logs /app/models/embeddings /app/models/chat && \
    chown -R app:app /app

# Copy requirements first for better caching
COPY requirements.txt .
COPY requirements.llamacpp.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Conditionally install llama.cpp if needed
RUN if [ "$PROVIDER_TYPE" = "llamacpp" ]; then \
        apt-get update && apt-get install -y cmake && \
        pip install --no-cache-dir -r requirements.llamacpp.txt && \
        rm -rf /var/lib/apt/lists/*; \
    fi

# Install development tools
RUN pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    pytest-cov \
    black \
    pylint \
    mypy \
    isort \
    ipython

# Copy application code
COPY --chown=app:app . .

# Switch to app user
USER app

# Install package in editable mode for hot reload
RUN pip install --user -e .

# Add local bin to PATH
ENV PATH=/home/app/.local/bin:$PATH
ENV PYTHONUNBUFFERED=1

# Create volume mount points
VOLUME ["/app/data", "/app/chroma_db", "/app/logs", "/app/models"]

# Expose ports
EXPOSE 8000

# Default command
CMD ["python", "main.py"]